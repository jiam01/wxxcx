/* 全局容器样式 */
.container {
  padding: 20px;
  font-family: Arial, sans-serif;
  background-color: #fff9f0;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 800px;
  margin: 0 auto;
  justify-content: start;
}

/* 表单项样式 */
.form-item {
  width: 80%;
  margin-bottom: 20px;
  margin-right: 20px;
  display: flex;
  flex-direction: column;
}

/* 标签样式 */
.label {
  font-size: 16px;
  font-weight: bold;
  color: #704214; /* 暖色调标题色 */
  margin-bottom: 8px;
}

/* 输入框样式 */
.input,
.textarea {
  background: rgba(255, 245, 230, 0.5);
  border-radius: 8px;
  padding: 12px;
  font-size: 14px;
  color: #666;
  border: 1px solid #eee;
  transition: border-color 0.3s ease;
}

.input:focus,
.textarea:focus {
  border-color: #d2691e; /* 焦点时边框颜色 */
  box-shadow: 0 0 8px rgba(210, 105, 30, 0.2);
}

/* 滑块样式 */
.slider {
  width: 100%;
  margin-top: 8px;
}

.slider-value {
  font-size: 14px;
  color: #a0522d; /* 暖色调文本色 */
  margin-left: 10px;
}

/* 时间选择器样式 */
.picker,
.picker-box {
  background: rgba(255, 245, 230, 0.5);
  border-radius: 8px;
  padding: 12px;
  font-size: 14px;
  color: #666;
  border: 1px solid #eee;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.picker:hover,
.picker-box:hover {
  background-color: #fff5e6;
}

/* 保存按钮样式 */
.save-button {
  background: linear-gradient(135deg, #d2691e, #a0522d);
  box-shadow: 0 4px 6px rgba(210, 105, 30, 0.2);
  color: white;
  padding: 15px 0;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-size: 18px;
  width: 100%;
  text-align: center;
  transition: background-color 0.3s ease;
  margin-top: 20px;
}

.save-button-hover {
  background-color: #a0522d;
}

/* 备注区域样式 */
.textarea {
  height: 100px;
  resize: none;
}