/* 全局样式 */
.container {
  padding: 20px;
  font-family: Arial, sans-serif;
  background-color: #fff9f0;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 800px;
  margin: 0 auto;
  justify-content: start;
}

.title {
  font-size: 22px;
  font-weight: bold;
  color: #704214; /* 更暖的标题色 */
  margin-bottom: 15px;
  text-align: center;
  text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
}

/* 添加新记录按钮样式 */
.add-record-button {
  background: linear-gradient(135deg, #d2691e, #a0522d);
  box-shadow: 0 4px 6px rgba(210, 105, 30, 0.2);
  color: white;
  padding: 15px 0;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-size: 18px;
  width: 100%;
  text-align: center;
  transition: background-color 0.3s ease;
  margin-bottom: 20px;
}

.add-record-button:hover {
  background-color: #a0522d;
}

/* 历史记录样式 */
.history-list {
  background: linear-gradient(145deg, #fff5e6, #ffffff);
  border-radius: 12px;
  box-shadow: 0 6px 12px rgba(139, 69, 19, 0.1);
  padding: 15px;
}

.history-item {
  background: rgba(255, 245, 230, 0.5);
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 15px;
  transition: transform 0.2s;
}

.history-item:hover {
  transform: translateY(-2px);
}

.history-item:last-child {
  border-bottom: none;
}

.history-item text {
  display: block;
  margin-bottom: 5px;
}

.history-item text:first-child {
  font-weight: bold;
  color: #8b5a2b; /* 更暖的文本色 */
}

.item-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
  padding: 6px 0;
  border-bottom: 1px dashed #eee;
}

.item-row:last-child {
  border-bottom: none;
}

/* 在.wxss中添加 */
.info-label {
  color: #a0522d;
  font-weight: bold;
  min-width: 80px;
  margin-right: 10px;
}

.info-content {
  color: #666;
  flex-grow: 1;
}