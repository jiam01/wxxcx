.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  justify-content: start;
  padding: 0;
}

.tabs {
  display: flex;
  justify-content: space-around;
  padding: 10px 0;
  background-color: #fff;
  border-bottom: 1px solid #ddd;
}

.tab {
  padding: 10px;
  cursor: pointer;
}

.tab.active {
  color: #007bff;
  border-bottom: 2px solid #007bff;
}

.content {
  flex: 1;
  overflow-y: auto;
}

.item {
  display: flex;
  padding: 15px;
  border-bottom: 1px solid #eee;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title {
  font-size: 16px;
  font-weight: bold;
}

.subtitle {
  font-size: 14px;
  color: #666;
}

.author {
  font-size: 12px;
  color: #999;
}

.thumbnail {
  width: 80px;
  height: 80px;
  margin-left: 10px;
  border-radius: 8px;
}