/* 整体容器 */
.expert-selection-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background-color: #1aad19;
}
.title {
  font-size: 36rpx;
  color: #fff;
}

/* 搜索框 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
}
.search-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 30rpx;
  font-size: 28rpx;
}
.search-btn {
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  background-color: #1aad19;
  color: #fff;
  margin-left: 20rpx;
  padding: 0;
}

/* 分类筛选 */
.category-list {
  padding: 20rpx;
  background-color: #fff;
}
.category-scroll {
  white-space: nowrap;
}
.category-item {
  display: inline-block;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  font-size: 28rpx;
}
.category-item.active {
  background-color: #1aad19;
  color: #fff;
  border-color: #1aad19;
}

/* 医生列表 */
.doctor-list {
  flex: 1;
  padding: 20rpx;
}
.doctor-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.doctor-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.doctor-info {
  flex: 1;
}
.doctor-name {
  font-size: 32rpx;
  font-weight: bold;
}
.doctor-title {
  font-size: 28rpx;
  color: #666;
}
.doctor-specialty {
  font-size: 24rpx;
  color: #999;
}
.chat-btn {
  width: 200rpx !important;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  background-color: #1aad19;
  color: #fff;
  padding: 0;
}